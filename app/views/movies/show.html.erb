

  <img id="movie-image" src="image.jpg">


  <%= image_tag @movie.poster_url %>
  <div class="movie-title"><%= @movie.title %></div>
  <div class="movie-rating">
    <% 10.times do |i| %>
      <% if i < @movie.rating %>
        <i class="fa-solid fa-star"></i>
      <% else %>
        <i class="far fa-star"></i>
      <% end %>
    <% end %>
  </div>
  <div class="movie-overview">
    <%= @movie.overview %>
    <% if @movie.actors.present? %>
      <p><strong>Actors:</strong> <%= @movie.actors %></p>
    <% end %>
  </div>



<div class="movie-trailer">
  <iframe src="#{movie.trailer_url}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
</div>
